{
  "private": true,
  "name": "@dcgw/super-metronome-hero",
  "version": "0.0.0-development",
  "type": "module",
  "description": "A rhythm game made for FuckThisJam",
  "keywords": [
    "game",
    "typescript",
    "fuck-this-jam"
  ],
  "author": {
    "name": "George Weller",
    "email": "george.weller@gmail.com"
  },
  "contributors": [
    {
      "name": "Daniel Cassidy",
      "email": "mail@danielcassidy.me.uk",
      "url": "https://www.danielcassidy.me.uk/"
    }
  ],
  "homepage": "https://github.com/dcgw/super-metronome-hero",
  "bugs": "https://github.com/dcgw/super-metronome-hero",
  "repository": "github:dcgw/super-metronome-hero",
  "license": "UNLICENSED",
  "scripts": {
    "build": "webpack --env production",
    "fix": "tsc && eslint . --fix && prettier --write .",
    "lint": "tsc && eslint . && prettier --check .",
    "semantic-release": "semantic-release",
    "start": "webpack serve --open",
    "test": "ava"
  },
  "engine": {
    "node": ">= 12"
  },
  "dependencies": {
    "@dcgw/excalibur-extended-label": "1.1.0",
    "@softwareventures/dictionary": "0.8.1",
    "@softwareventures/nullable": "1.4.0",
    "@types/domready": "1.0.0",
    "@types/webpack-env": "1.16.2",
    "domready": "1.0.8",
    "excalibur": "0.24.4",
    "tslib": "2.3.0"
  },
  "devDependencies": {
    "@semantic-release/exec": "5.0.0",
    "@softwareventures/eslint-config": "3.6.2",
    "@softwareventures/prettier-config": "1.0.2",
    "@softwareventures/webpack-config": "4.0.0-alpha.23",
    "ava": "3.15.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.30.0",
    "html-webpack-plugin": "5.3.2",
    "prettier": "2.3.2",
    "resolve-typescript-plugin": "1.0.0-alpha.4",
    "semantic-release": "17.4.4",
    "semantic-release-s3-upload": "0.2.80",
    "ts-loader": "8.3.0",
    "ts-node": "10.0.0",
    "typescript": "4.3.5",
    "webpack": "5.42.1",
    "webpack-cli": "4.7.2",
    "webpack-dev-server": "3.11.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@softwareventures"
  },
  "prettier": "@softwareventures/prettier-config",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "yarn build"
        }
      ],
      [
        "semantic-release-s3-upload",
        {
          "uploads": [
            {
              "src": {
                "dir": "./dist"
              },
              "dest": {
                "bucket": "super-metronome-hero"
              }
            }
          ]
        }
      ]
    ]
  }
}
